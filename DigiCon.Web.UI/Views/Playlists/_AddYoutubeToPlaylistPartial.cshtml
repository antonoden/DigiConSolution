@model DigiCon.Web.UI.Models.ViewModel_AddYoutubeToPlaylist

@using (Ajax.BeginForm("AddYoutube", "Home", new { playlistId = Model.playlistId }, new AjaxOptions
{
    HttpMethod = "POST",
    UpdateTargetId = "playlist",
    InsertionMode = InsertionMode.Replace
}))
{
    <div class="form-horizontal" style="padding-top:8px;">
        <div class="form-group">
            @Html.LabelFor(Model => Model.url, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(Model => Model.url, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.url, "", new { @class = "text-danger input-lg" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(Model => Model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(Model => Model.name, new { @class = "form-control" })
                @Html.ValidationMessageFor(Model => Model.name, "", new { @class = "text-danger input-lg" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lägg till" class="btn btn-primary" onclick="addSlideModalSave()"/>
        </div>
    </div>
}
